<div class="container">
  <center><h2>修改文章</h2></center>
  <%= form_for @post  do |f| %>
    <div class="form-group">
      <h3><span class="label label-info">标题</span></h3>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <h3><span class="label label-info">内容</span></h3>
      <%= f.kindeditor :content, :autofocus => true, :class=>"form-control" ,:rows=>"10" %>
    </div>
    <div class="form-group control-label">
      <h3><span class="label label-info">选择话题</span></h3>
      <%= f.select :section_id, @sections_with_ids, class: "form-control", style: 'font-size: 20px'%>
    </div>
    <div class="form-group">
      <%= f.submit "创建", :class=>"btn btn-info"%>
    </div>
  <% end %>
</div>
