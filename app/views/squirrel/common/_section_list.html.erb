<div class='panel panel-default'>
  <div class="panel-heading">节点一览
</div>
  <div class="panel-body">
    <% sections.each do  |section| %>
      <%= link_to section.name, section_path(section.id) %>
    <% end %>
    <div>
    <% if current_user && current_user.is_admin %>
      <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#myModal">创建节点</button>
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <%= form_for @new_section do |f|%>
                <div class="form-group">
                  <label>新添话题节点</label>
                  <%=f.text_field :name, class:"form-control"%>
                </div>
                <div class="form-group">
                  <%=f.submit "新建", class:"btn btn-info"%>
                </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>
